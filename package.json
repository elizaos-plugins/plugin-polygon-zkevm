{
  "name": "@elizaos/plugin-polygon-zkevm",
  "description": "ElizaOS plugin for Polygon zkEVM",
  "version": "1.0.1",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "polygon",
    "zkevm",
    "elizaos",
    "plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-polygon-zkevm.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "latest",
    "ethers": "^6.13.1",
    "zod": "3.25.32"
  },
  "devDependencies": {
    "tsup": "8.4.0",
    "prettier": "3.5.3",
    "vitest": "2.1.5",
    "@vitest/coverage-v8": "2.1.5",
    "typescript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "dotenv": "^16.4.5",
    "vite-tsconfig-paths": "^4.3.1",
    "@types/node": "^20.11.30"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint src/**/*.ts && prettier --check src/**/*.ts",
    "test": "vitest run",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "b165ad83e5f7a21bc1edbd83374ca087e3cd6b33",
  "packageType": "plugin",
  "platform": "node",
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ALCHEMY_API_KEY": {
        "type": "string",
        "description": "Alchemy API key for Polygon zkEVM network access. Provides enhanced performance and reliability over direct RPC connections.",
        "required": false,
        "sensitive": true
      },
      "ZKEVM_RPC_URL": {
        "type": "string",
        "description": "Direct RPC endpoint URL for Polygon zkEVM network. Used as fallback if ALCHEMY_API_KEY is not provided. At least one of ALCHEMY_API_KEY or ZKEVM_RPC_URL must be configured.",
        "required": false,
        "default": "https://polygonzkevm-mainnet.g.alchemy.com/v2",
        "sensitive": false
      },
      "ZKEVM_ALCHEMY_URL": {
        "type": "string",
        "description": "Optional custom Alchemy base URL for Polygon zkEVM. Used to override the default Alchemy endpoint URL.",
        "required": false,
        "default": "https://polygonzkevm-mainnet.g.alchemy.com/v2",
        "sensitive": false
      },
      "PRIVATE_KEY": {
        "type": "string",
        "description": "Hex-encoded private key (starting with 0x) required for write operations including smart contract deployment, asset bridging, and transaction signing.",
        "required": false,
        "sensitive": true
      }
    }
  },
  "npmPackage": "plugin-polygon-zkevm"
}